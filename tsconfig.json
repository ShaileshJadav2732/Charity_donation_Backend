{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}