{
	"name": "charity-donation-backend",
	"version": "1.0.0",
	"main": "dist/server.js",
	"scripts": {
		"dev": "npx ts-node --transpile-only src/server.ts",
		"build": "tsc",
		"build:clean": "rm -rf dist && npm run build",
		"start": "node dist/server.js",
		"start:dev": "npx ts-node --transpile-only src/server.ts",
		"start:prod": "npm run build && npm start",
		"postbuild": "echo 'Build completed. Files in dist:' && ls -la dist/",
		"render-build": "npm install && npm run build && echo 'Render build complete. Checking files:' && ls -la && ls -la dist/",
		"render-start": "node dist/server.js",
		"deploy": "echo 'Current directory:' && pwd && echo 'Contents:' && ls -la && echo 'Dist contents:' && ls -la dist/ && node dist/server.js"
	},
	"dependencies": {
		"@stripe/react-stripe-js": "^3.7.0",
		"@stripe/stripe-js": "^7.4.0",
		"@types/stripe": "^8.0.416",
		"cloudinary": "^2.7.0",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"firebase-admin": "^13.5.0",
		"groq-sdk": "^0.24.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^7.8.7",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"pdfkit": "^0.17.2",
		"resend": "^4.8.0",
		"socket.io": "^4.8.1",
		"stripe": "^14.25.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.21",
		"@types/fs-extra": "^11.0.4",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^20.19.14",
		"@types/nodemailer": "^6.4.17",
		"@types/pdfkit": "^0.13.9",
		"@types/socket.io": "^3.0.1",
		"@types/stripe": "^8.0.416",
		"ts-node-dev": "^2.0.0"
	}
}
